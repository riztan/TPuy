 *
 * test_dolphin  Ejemplo de conexión a base de datos usando Dolphin
 *
 */

#include "tpy_xbs.ch"
#include "tdolphin.ch"

Procedure test_dolphin()

   local oForm
   local oConn, oQry, cQry, oErr

   TRY
      CONNECT oConn ;
         HOST     "localhost" ;
         USER     "root"      ;
         PASSWORD "topsecret" ;
         PORT 3306            ;
         DATABASE "MyDataBase"
   CATCH oErr
      MsgStop( oErr:Description )
      Return
   END

   // Consulta a una tabla correspondiente al sistema prestashop 
   cQry := "select * from ps_product "

   DEFINE PUBLIC oForm

      DEFINE MODEL ::oModel ;
             CONN oConn     ;
             QUERY cQry

      DEFINE LISTBOX ::oListBox ;
             SIZE 800,400       ;
             MODEL ::oModel     ;
             OF ::oWnd

      ::oListBox:Active()

  oConn:End()


//eof
